#AdvSceneSwitcher QTextEdit, 
#AdvSceneSwitcher QPlainTextEdit {
    border: 1px solid var(--grey4);
    background-color: var(--grey8);
}

#AdvSceneSwitcher QLineEdit:hover,
#AdvSceneSwitcher QTextEdit:hover, 
#AdvSceneSwitcher QPlainTextEdit:hover {
    border: 1px solid var(--purple2);
}

/* ::::::::::::::::::::::::::::::::::::: */
/* :::'                              ':: */
/* ::    QSpinBox & QDoubleSpinBox    :: */
/* :::.                              .:: */
/* ::::::::::::::::::::::::::::::::::::: */
QSpinBox,
QDoubleSpinBox {
    background-color: var(--grey8);
    border-width: 0px;
    padding-left: 8px;
    height: var(--input_height);
    max-height: var(--input_height);
    min-width: 50px;
    border: 1px solid transparent;
}

QSpinBox:hover,
QDoubleSpinBox:hover,
QSpinBox:focus,
QDoubleSpinBox:focus {
    background-color: var(--grey7);
    border: 1px solid var(--grey9);
}

QSpinBox::up-button:disabled,
QSpinBox::up-button:off,
QDoubleSpinBox::up-button:disabled,
QDoubleSpinBox::up-button:off {
    border-top: 1px solid var(--grey4); 
    border-left: 1px solid var(--grey4); 
    border-right: 1px solid var(--grey4);
    border-bottom: none;
}

QSpinBox::down-button:disabled,
QSpinBox::down-button:off,
QDoubleSpinBox::down-button:disabled,
QDoubleSpinBox::down-button:off {
    border-bottom: 1px solid var(--grey4); 
    border-left: 1px solid var(--grey4); 
    border-right: 1px solid var(--grey4);
    border-top: none;
}

/* Fix the up/down buttons for the selector input arrows */
QSpinBox::up-button,
QDoubleSpinBox::up-button {
    subcontrol-origin: padding;
    subcontrol-position: top right; /* position at the top right corner */

    width: 15px;

    border-top: 1px solid var(--purple1); 
    border-left: 1px solid var(--purple1); 
    border-right: 1px solid var(--purple1);
    border-bottom: none;
    background-color: var(--purple1);
    border-top-left-radius: 2px;
    border-top-right-radius: 2px;
}

QSpinBox::down-button,
QDoubleSpinBox::down-button {
    subcontrol-origin: padding;
    subcontrol-position: bottom right; /* position at the bottom right corner */

    width: 15px;
    margin-top: -1px; /* Adjustment to remove middle border empty space between arrows */
    
    border-bottom: 1px solid var(--purple1); 
    border-left: 1px solid var(--purple1); 
    border-right: 1px solid var(--purple1);
    border-top: none;
    background-color: var(--purple1);
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow { 
    width: 12px; height: 12px;
}
QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    width: 12px; height: 12px;
}

/* :::::''''''''''''''''''''':::::: */
/* ::: #settingsPages overrides ::: */
/* :::::.....................:::::: */

/* Overwrite input boxes for settingsPages */
#settingsPages QSpinBox,
#settingsPages QDoubleSpinBox {
    background-color: var(--grey6);
}

#settingsPages QSpinBox:hover,
#settingsPages QDoubleSpinBox:hover,
#settingsPages QSpinBox:focus,
#settingsPages QDoubleSpinBox:focus {
    background-color: var(--grey5);
}

/* ::::::::::::::::::::::::::::::::::::: */
/* :::'                              ':: */
/* ::    QComboBox & QDateTimeEdit    :: */
/* :::.                              .:: */
/* ::::::::::::::::::::::::::::::::::::: */
QComboBox::drop-down,
QDateTimeEdit::drop-down,
QComboBox::drop-down:editable,
QDateTimeEdit::drop-down:editable  {
    border:none;
    width: 32px;
    background-color: var(--purple2);
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
}

QComboBox:hover,
QDateTimeEdit:hover,
QDateTimeEdit:selected {
    background-color: var(--input_bg_hover);
}

QComboBox:on,
QDateTimeEdit:on,
QComboBox:editable:focus {
    background-color: var(--input_bg_focus);
    border-radius: 2px;
}

/* ::::::::''''''''''''''''''''''''':::::::: */
/* ::: Advanced Scene Switcher overrides ::: */
/* ::::::::.........................:::::::: */
#AdvSceneSwitcher QComboBox {
    border: 1px solid var(--grey4);
    background-color: var(--grey8);
}

#AdvSceneSwitcher QComboBox:hover {
    border: 1px solid var(--purple2);
}

/* ::::::::::::::::::::::::::::::::::::::: */
/* :::'                               '::: */
/* ::   contextContainer (preview Bar)  :: */
/* :::.                               .::: */
/* ::::::::::::::::::::::::::::::::::::::: */

OBSBasic #contextContainer {
  background-color: var(--bg_window);
}

OBSBasic #contextSubContainer #line,
OBSBasic #contextSubContainer #line_3 {
    border-color: var(--grey6);
}

/* :::::::::::::::::::::::::::::::::::::::: */
/* :::'                                '::: */
/* ::  OBSBasicStatusBar (Footer status) :: */
/* :::.                                .::: */
/* :::::::::::::::::::::::::::::::::::::::: */

OBSBasicStatusBar {
    border-top: 1px solid var(--grey7);
    background-color: var(--grey5);
}

OBSBasicStatusBar StatusBarWidget > QFrame {
    border: 0px solid var(--grey7);
    border-left: 1px solid var(--grey7);
    padding: 0px 8px 2px;
}


/* :::::::::::::::::::::::::::::::: */
/* :::'                        '::: */
/* ::  VolumeControl / AudioMix  :: */
/* :::.                        .::: */
/* :::::::::::::::::::::::::::::::: */

VolumeMeter {
    background-color: var(--grey8);
}

VolumeControl {
    margin: 2px 1px 2px 2px;
    border: 1px solid var(--grey5);
    background-color: var(--grey8);
}

VolumeControl.volume-pinned .mixer-category {
    background: var(--purple2); 
    color: var(--text);
}

QSlider::sub-page:horizontal {
    background-color: var(--purple1);
    border-radius: 2px;
}

QSlider::add-page:vertical {
    background-color: var(--purple1);
    border-radius: 2px;
}

/* Align the audio mixers border bottom with SceneTree & SourceTree */
AudioMixer #stackedMixerArea {
    margin-bottom: 1px;
}

/* Options button in mixer */
AudioMixer #stackedMixerArea QPushButton {
    width: var(--icon_base_mixer);
    height: var(--icon_base_mixer);
    padding: 2px;
}

AudioMixer #stackedMixerArea QPushButton:hover,
AudioMixer #stackedMixerArea QPushButton:checked,
AudioMixer #stackedMixerArea QPushButton:focus,
AudioMixer #stackedMixerArea QPushButton::selected {
    border: 1px solid transparent;
}

