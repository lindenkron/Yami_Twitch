/* ::::::::::::::::::::::::::::::::::::: */
/* :::'                              ':: */
/* ::  QWidgets, QFrame, Any general  :: */
/* :::.                              .:: */
/* ::::::::::::::::::::::::::::::::::::: */
/* Remove background and border from scene transition/controls */
/* To make them back of the open floating area of the main scene */
OBSDock > QWidget {
    background-color: transparent;
    border-radius: 0px;
    border: unset;
}

/* For the border around the condition/actions segment */ 
#AdvSceneSwitcher #conditionsList,
#AdvSceneSwitcher #actionsList {
    border: 1px solid var(--grey9); 
}

#AdvSceneSwitcher QTabBar::tab{
    background-color: var(--purple1);
    border: none;
    padding: 3px 6px;
}

/* Top border under the tabwidget tabs */
#AdvSceneSwitcher QTabWidget::pane {
    border-width: 1px;
}

#AdvSceneSwitcher QTabBar::tab:selected,
#AdvSceneSwitcher QTabBar::tab:hover  {
    background-color: var(--purple2);
}


/* ::::::::::::::::::::::::::::::::::::::::::::: */
/* :::'       (Any list widget in OBS)       ':: */
/* ::      QMenu, QListView, QListWidget      :: */
/* :::.        SceneTree, SourceTree         .:: */
/* ::::::::::::::::::::::::::::::::::::::::::::: */

/* Menus and list widgets */
QMenu,
QListWidget {
    margin: 0;
    padding: 0;
    border-radius: 0;
}

/* Shared item base */
QMenu::item,
QListView::item,
QListWidget::item,
SceneTree::item,
SourceTree::item {
    border: 1px solid transparent;
    border-radius: 0;
}

/* Selected items (hover or not) */
QMenu::item:selected,
QListView::item:selected,
QListWidget::item:selected,
SceneTree::item:selected,
SourceTree::item:selected {
    background-color: var(--purple2);
}

/* Selected + active window */
QMenu::item:selected:active,
QListView::item:selected:active,
QListWidget::item:selected:active,
SceneTree::item:selected:active,
SourceTree::item:selected:active {
    border-color: var(--purple2);
}

/* Selected + inactive window */
QMenu::item:selected:!active,
QListView::item:selected:!active,
QListWidget::item:selected:!active,
SceneTree::item:selected:!active,
SourceTree::item:selected:!active {
    border-color: var(--grey1);
}

/* Hovered but not selected */
QMenu::item:hover:!selected,
QListView::item:hover:!selected,
QListWidget::item:hover:!selected,
SceneTree::item:hover:!selected,
SourceTree::item:hover:!selected {
    background-color: var(--purple1);
    border-color: var(--purple1);
}

/* Disabled (hover or not) */
QMenu::item:disabled,
QListView::item:disabled,
QListWidget::item:disabled,
SceneTree::item:disabled,
SourceTree::item:disabled {
    background: transparent;
    color: var(--text_disabled);
    border-color: transparent;
}

/* Top menu dropdown */
QMenu::separator {
    height: 2px; 
}

QMenu::item {
    padding: var(--padding_menu_y) var(--padding_menu);
    padding-right: 20px;
    font-size: var(--font_base);
    border-radius: 0;
}

/* :::::::::::::::::::::::::::::::::: */
/* :: Border on Settings Menu list :: */
/* :::::::::::::::::::::::::::::::::: */

OBSBasicSettings #listWidget {
    border: 1px solid var(--purple1);
}

/* ::::::::'''''''''''''''''''''''':::::::: */
