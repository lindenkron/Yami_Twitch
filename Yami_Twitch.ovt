}

/* Main containers */
SceneTree,
SourceTree,
#stackedMixerArea QScrollArea {
    border: 1px solid var(--purple1);
    background-color: var(--bg_base);
    padding: 0;
    border-radius: 0;
}

SceneTree::item,
SourceTree::item {
    margin: 1px 1px 0 1px;
}

SourceTreeItem {
    min-height: 23px;
}

/* Source labels */
SourceTreeItem OBSSourceLabel {
    margin: 1px;
    padding-bottom: 3px;
}

