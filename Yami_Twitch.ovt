}

QPushButton:checked {
}

QPushButton:disabled,
QToolBar QToolButton:disabled,
.btn-tool:disabled {
    border-color: var(--button_border_disabled);
    background-color: var(--grey5);
}

QToolBar QToolButton:hover,
.btn-tool:hover {
    border-color: var(--grey2);
}

/* Created black bar under Scene/Source tree window*/
QToolBar {
