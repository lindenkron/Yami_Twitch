OBSBasicAdvAudio #scrollArea {
    padding: 8px;
    background: var(--grey7);
    border: 1px solid var(--grey9);
    border-radius: 0px;
}

QSlider::add-page:horizontal:disabled {
    background-color: var(--grey5);
}

QSlider::add-page:vertical:disabled {
