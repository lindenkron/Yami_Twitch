/* Thanks for help, @WARCHAMP & @WarmUpTill */
/* Original idea and inspiration based off of Twitchy by derMiepz */
@OBSThemeMeta {
    name: 'Twitch';
    id: 'com.obsproject.Yami.Twitch';
    extends: 'com.obsproject.Yami';
    author: 'Lindenkron';
    dark: 'true';
}

@OBSThemeVars {
    --grey1: rgb(200,199,200);
    --grey2: rgb(160,160,160);
    --grey3: rgb(120,120,120);
    --grey4: rgb(64,64,64);
    --grey5: rgb(34,33,39);
    --grey6: rgb(24,24,27);
    --grey7: rgb(14,14,16);
    --grey8: rgb(11,10,11);
    --grey9: rgb(8,7,8);
    --grey10: rgb(4,3,5);


    --purple1: #9146ff;
    --purple2: #782ce8;
    --purple3: #6921ff;
    --orange: #ff7800;

    --bg_window: var(--grey6);
    --bg_preview: var(--grey8);
    --bg_base: var(--grey7);

    /* Layout */
    --font_base_value: 10;
    --spacing_base_value: 4;
    --padding_base_value: 0.25; 
    
    --font_small: calc(0.8pt * var(--font_base_value));

    /* OS Fixes */
    --os_mac_font_base_value: 10;

    /* Default variables from Yami.obt that we overwrite */
    --icon_base: calc(6px + var(--font_base_value));

    --primary: var(--purple2);
    --primary_light: var(--purple1);
    --primary_lighter: var(--purple1);
    --primary_dark: var(--purple3);
    --primary_darker: var(--purple3);

    --padding_wide: calc(18px + calc(0.25 * var(--padding_base_value)));
    --padding_menu: calc(8px + calc(1 * var(--padding_base_value)));

    --border_color: transparent;

    --border_radius: 2px;
    --border_radius_small: 0px;
    --border_radius_large: 0px;

    --input_bg: var(--purple2);
    --input_bg_hover: var(--purple1);
    --input_bg_focus: var(--grey8);

    --list_item_bg_selected: var(--purple1);
    --list_item_bg_hover: var(--purple2);

    --input_border: var(--purple1);
    --input_border_hover: var(--purple2);
    --input_border_focus: var(--purple2);

    --spacing_input: var(--spacing_base);

    --title_bg: var(--grey6);

    --button_bg: var(--purple2);
    --button_bg_hover: var(--purple1);
    --button_bg_down: var(--grey7);
    --button_bg_disabled: var(--grey5);

    --button_border: var(--purple2);
    --button_border_hover: var(--purple1);
    --button_border_focus: var(--purple1);
    --button_border_disabled: rgb(44,44,44);

    --tab_bg: var(--purple2);
    --tab_bg_hover: var(--purple1);
    --tab_bg_down: var(--purple1);
    --tab_bg_disabled: var(--grey8);

    --tab_border: var(--grey1);
    --tab_border_hover: var(--grey1);
    --tab_border_focus: var(--grey1);
    --tab_border_selected: var(--purple1);

    --scrollbar: var(--grey4);
    --scrollbar_hover: var(--grey3);
    --scrollbar_down: var(--grey8);
    --scrollbar_border: var(--grey2);

    --volume_slider: 5px;

    /* Variant Extras */
    --dock_title_padding: calc(2px + var(--padding_base));
    --icon_base_mixer: calc(4px + var(--icon_base));
    --padding_menu_y: calc(3px + calc(1 * var(--padding_base_value)));
}

